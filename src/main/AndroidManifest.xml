<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.imdp.instaclimb"
    android:versionCode="2"
    android:versionName="0.2.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />

    <!--<android:uses-permission android:name="android.permission.READ_PHONE_STATE" />-->

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- CameraActivity Activity -->
        <activity
            android:name="com.imdp.instaclimb.CameraActivity"
            android:screenOrientation="portrait" >
        </activity>

        <!-- Show Capture Activity -->
        <activity
            android:name="com.imdp.instaclimb.ShowCapture"
            android:label="@string/title_activity_show_capture"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

        <!-- Settings Activity -->
        <activity
            android:name="com.imdp.instaclimb.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/SettingsTheme"
            android:screenOrientation="portrait" >
        </activity>

      <!-- Climbing Info Activity -->
        <activity
            android:name="com.imdp.instaclimb.ClimbingInfo"
            android:label="@string/title_activity_climbing_info"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
