<?xml version="1.0" encoding="utf-8" ?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:layout_gravity="center_horizontal|top" android:background="#EFEF55"
    android:id="@+id/sc_root_frame" android:visibility="visible" android:measureWithLargestChild="true"
    >


  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="100dp" android:background="@color/overlay_bg" android:id="@+id/sc_top_frame"
      android:gravity="center_horizontal" android:paddingTop="5dp" android:paddingBottom="5dp">
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/imageView"
               android:src="@drawable/instaclimb"
               android:cropToPadding="false"/>
  </LinearLayout>
  <ImageView
      android:layout_width="match_parent"
      android:layout_height="200dp"
      android:id="@+id/sc_img_view" android:background="#27FF54"/>
  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="200dp" android:background="@color/overlay_bg" android:id="@+id/sc_bottom_frame">
    <Button android:id="@+id/button_share" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:focusable="true"
            android:focusableInTouchMode="true"
            android:visibility="visible" android:background="@drawable/btn_share_48"
            android:layout_gravity="center_horizontal"/>
  </LinearLayout>
</LinearLayout>
